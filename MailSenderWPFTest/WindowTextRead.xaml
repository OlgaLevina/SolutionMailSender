<Window x:Class="MailSenderWPFTest.WindowTextRead"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSenderWPFTest"
        mc:Ignorable="d"
        Title="WindowTextRead" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Button Content="Read" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click"></Button>
        <TextBlock Name="ResultText" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Text" Margin="171,143,201,0" Width="420"></TextBlock>
        <Button Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,0,0" Click="ButtonCancel_Click"></Button>
        <ProgressBar Name="Progress"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,0,0" Width="200" Height="20"></ProgressBar>
    </Grid>
</Window>
